{
  "hosting": {
    "public": "/",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/404.html",
        "type": 404
      },
      {
        "source": "/assets/**",
        "function": "assets"
      }
    ]
  }
}
